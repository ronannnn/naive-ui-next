{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDirs": ["./", "./packages/components"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "~/*": ["packages/components/*"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
